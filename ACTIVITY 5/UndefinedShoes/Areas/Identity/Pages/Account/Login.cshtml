@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<main class="min-vh-100 bg-white py-5">
    <div class="container px-4" style="max-width: 500px;">
        <div class="mb-4">
            <a asp-page="/Index" class="d-inline-flex align-items-center gap-2 text-decoration-none text-secondary mb-4">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19L5 12L12 5" />
                </svg>
                Back to Home
            </a>
            <h1 class="h3 fw-bold text-dark mb-2">Welcome Back</h1>
            <p class="text-secondary mb-0">Sign in to your account to continue shopping</p>
        </div>

        <form id="account" method="post">
            <div class="card border rounded-3 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label small fw-semibold text-dark">Email <span class="text-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg border rounded-3" autocomplete="username" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label small fw-semibold text-dark">Password <span class="text-danger">*</span></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg border rounded-3" autocomplete="current-password" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <label class="d-flex align-items-center gap-2 form-label mb-0 cursor-pointer">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <span class="small text-secondary">Remember me</span>
                        </label>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="small text-secondary text-decoration-none">Forgot password?</a>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-dark btn-lg w-100 rounded-3 py-3 fw-semibold mb-4">Sign In</button>

                    <div class="text-center small text-secondary">
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-dark text-decoration-none">Sign up</a>
                    </div>
                </div>
            </div>
        </form>

        <div class="position-relative mb-4">
            <hr class="text-secondary" />
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small text-secondary">Or continue with</span>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-6">
                <button type="button" class="btn btn-outline-secondary w-100 rounded-3 py-2.5 d-flex align-items-center justify-content-center gap-2" disabled>Google</button>
            </div>
            <div class="col-6">
                <button type="button" class="btn btn-outline-secondary w-100 rounded-3 py-2.5 d-flex align-items-center justify-content-center gap-2" disabled>Facebook</button>
            </div>
        </div>

        <p class="small text-secondary text-center mb-0">By continuing, you agree to our Terms of Service and Privacy Policy</p>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
